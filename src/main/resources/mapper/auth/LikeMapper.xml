<?xml version="1.0" encoding = "UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.soft.login.mapper.LikeMapper">
    <select id="checkLike" parameterType="map" resultType="int">
        SELECT COUNT(*) FROM LIKES
        WHERE POST_IDX = #{postIdx} AND USER_IDX = #{userIdx}
    </select>

    <insert id="insertLike" parameterType="map">
        INSERT INTO LIKES (POST_IDX, USER_IDX)
        VALUES (#{postIdx}, #{userIdx})
    </insert>

    <delete id="deleteLike" parameterType="map">
        DELETE FROM LIKES
        WHERE POST_IDX = #{postIdx} AND USER_IDX = #{userIdx}
    </delete>


</mapper>