<?xml version="1.0" encoding = "UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.soft.login.mapper.MyInfoMapper">
    <select id="getMyPageInfo" resultType="MyPageResponse">
        SELECT
            USER_EMAIL as email,
            (SELECT COUNT(*) FROM POSTS WHERE USER_IDX = #{userIdx}) as postsCount
        FROM
            MEMBER
        WHERE
            IDX = #{userIdx}

    </select>
</mapper>